<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/gradient_constraint_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FFE600">

	<android.support.v7.widget.RecyclerView
		android:id="@+id/results_recycler_view"
		android:layout_width="387dp"
		android:layout_height="453dp"
		android:layout_marginTop="@dimen/results_activity_results_recycler_view_margin_top"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintHorizontal_weight="1"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/view_group_constraint_layout"
		app:layout_constraintVertical_bias="0.117"
		tools:listitem="@layout/results_view_holder" />

	<ImageButton
		android:id="@+id/back_button"
		android:layout_width="@dimen/results_activity_back_button_width"
		android:layout_height="@dimen/results_activity_back_button_height"
		android:layout_marginStart="@dimen/results_activity_back_button_margin_start"
		android:layout_marginTop="@dimen/results_activity_back_button_margin_top"
		android:background="?attr/selectableItemBackground"
		android:src="@drawable/group_2"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout_editor_absoluteX="9dp"
		tools:layout_editor_absoluteY="29dp"/>

	<android.support.constraint.ConstraintLayout
		android:id="@+id/view_group_constraint_layout"
		android:layout_width="0dp"
		android:layout_height="@dimen/results_activity_view_group_constraint_layout_height"
		android:layout_marginEnd="@dimen/results_activity_view_group_constraint_layout_margin_end"
		android:layout_marginStart="@dimen/results_activity_view_group_constraint_layout_margin_start"
		android:layout_marginTop="@dimen/results_activity_view_group_constraint_layout_margin_top"
		android:background="@drawable/results_activity_view_group_constraint_layout_background"
		app:layout_constraintHorizontal_weight="0.77"
		app:layout_constraintLeft_toRightOf="@+id/back_button"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout_editor_absoluteX="75dp"
		tools:layout_editor_absoluteY="25dp">
	
		<ImageButton
			android:id="@+id/more_button"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginBottom="@dimen/results_activity_more_button_margin_bottom"
			android:layout_marginEnd="@dimen/results_activity_more_button_margin_end"
			android:layout_marginStart="@dimen/results_activity_more_button_margin_start"
			android:layout_marginTop="@dimen/results_activity_more_button_margin_top"
			android:background="?attr/selectableItemBackground"
			android:src="@drawable/path_2"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintHorizontal_weight="0.25"
			app:layout_constraintLeft_toRightOf="@+id/search_item_edit_text"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_weight="0.69"
			tools:layout_editor_absoluteX="212dp"
			tools:layout_editor_absoluteY="7dp"/>
	
		<EditText
			android:id="@+id/search_item_edit_text"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginBottom="@dimen/results_activity_search_item_edit_text_margin_bottom"
			android:layout_marginStart="@dimen/results_activity_search_item_edit_text_margin_start"
			android:layout_marginTop="@dimen/results_activity_search_item_edit_text_margin_top"
			android:background="@color/results_activity_search_item_edit_text_background_color"
			android:fontFamily="@font/font_lato_regular"
			android:gravity="start|center_vertical"
			android:hint="@string/results_activity_search_item_edit_text_hint"
			android:inputType="text"
			android:maxLines="1"
			android:textColor="@color/results_activity_search_item_edit_text_text_color"
			android:textColorHint="@color/default_hint"
			android:textSize="@dimen/results_activity_search_item_edit_text_text_size"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintHorizontal_weight="0.59"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toLeftOf="@+id/more_button"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_weight="0.54"
			tools:layout_editor_absoluteX="7dp"
			tools:layout_editor_absoluteY="13dp"/>
	</android.support.constraint.ConstraintLayout>

	<Button
		android:id="@+id/previous_button"
		android:layout_width="0dp"
		android:layout_height="@dimen/results_activity_previous_button_height"
		android:layout_marginBottom="@dimen/results_activity_previous_button_margin_bottom"
		android:layout_marginStart="@dimen/results_activity_previous_button_margin_start"
		android:background="@drawable/results_activity_previous_button_ripple"
		android:fontFamily="@font/font_lato_bold"
		android:gravity="center"
		android:text="@string/results_activity_previous_button_text"
		android:textColor="@color/results_activity_previous_button_text_color"
		android:textSize="@dimen/results_activity_previous_button_text_size"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintHorizontal_weight="0.23"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@+id/next_button"
		tools:layout_editor_absoluteX="20dp"
		tools:layout_editor_absoluteY="559dp"/>

	<Button
		android:id="@+id/next_button"
		android:layout_width="0dp"
		android:layout_height="@dimen/results_activity_next_button_height"
		android:layout_marginBottom="@dimen/results_activity_next_button_margin_bottom"
		android:layout_marginEnd="@dimen/results_activity_next_button_margin_end"
		android:layout_marginStart="@dimen/results_activity_next_button_margin_start"
		android:background="@drawable/results_activity_next_button_ripple"
		android:fontFamily="@font/font_lato_bold"
		android:gravity="center"
		android:text="@string/results_activity_next_button_text"
		android:textColor="@color/results_activity_next_button_text_color"
		android:textSize="@dimen/results_activity_next_button_text_size"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintHorizontal_weight="0.23"
		app:layout_constraintLeft_toRightOf="@+id/previous_button"
		app:layout_constraintRight_toRightOf="parent"
		tools:layout_editor_absoluteX="269dp"
		tools:layout_editor_absoluteY="559dp"/>
</android.support.constraint.ConstraintLayout>